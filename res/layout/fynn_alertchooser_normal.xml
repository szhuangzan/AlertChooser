<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#00000000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fynn_alertchooser_item_top_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="#DCDCDC" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fynn_alertchooser_item_bottom_selector"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="ghfgdsa"
                android:textColor="#007FFF" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/fynn_alertchooser_item_single_selector"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:textColor="#FF0000" />

</LinearLayout>